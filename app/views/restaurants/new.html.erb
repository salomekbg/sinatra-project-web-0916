<h2 class="top">Add by Yelp Search</h2>
<form action="/businesses" method="post">
  <div class="left">Location: </div>
  <div class="right"><input type="text" name="location"></div>
  <br><br>
  <div class="left">Cuisine: </div>
  <div class="right"><input class="" type="text" name="cuisine"></div>
  <br><br>
  <input type="submit" value="Submit" class="button">
</form>
<br><br>
<h2>Manually Add a Restaurant</h2>
<form action="/restaurants" method="post">
  <div class="left">Name:</div>
  <div class="right"><input type="text" name="restaurant[name]"></div>
  <br><br>
  <div class="left">Rating:</div>
  <div class="right"><input type="text" name="restaurant[rating]"></div>
  <br><br>
  <div class="left">Address:</div>
  <div class="right"><input type="text" name="restaurant[address]"></div>
  <br><br>
  <div class="left">Phone:</div>
  <div class="right"><input type="text" name="restaurant[phone]"></div>
  <br><br>
  <input type="submit" name="submit" value="Submit" class="button">
</form>
